# Docker Environment Variables
# Copy this file to .env and update with your values

# Database
POSTGRES_USER=mediamind
POSTGRES_PASSWORD=change-this-password
POSTGRES_DB=mediamind
POSTGRES_PORT=5432

# Redis
REDIS_PASSWORD=change-this-password
REDIS_PORT=6379

# Application
APP_NAME=Media Mind AI
ENVIRONMENT=development
DEBUG=true
API_VERSION=v1

# Server Ports
BACKEND_PORT=8000
FRONTEND_PORT=3000

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:80"]

# AI/ML Services
OPENAI_API_KEY=your-openai-api-key-here
EMBEDDING_MODEL=text-embedding-ada-002

# Transcription
WHISPER_MODEL=base
USE_OPENAI_WHISPER_API=false
TRANSCRIPTION_LANGUAGE=
TRANSCRIPTION_TASK=transcribe

# Document Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
CHUNKING_STRATEGY=fixed

# Vector Search
SEARCH_TOP_K=5
EMBEDDING_BATCH_SIZE=100

# LLM / Q&A
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.7
RAG_CONTEXT_CHUNKS=5
RAG_MAX_CONTEXT_LENGTH=4000

# File Storage
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=["pdf","txt","docx","pptx","xlsx","jpg","jpeg","png","gif","mp4","mp3","wav"]

# Security
SECRET_KEY=change-this-secret-key-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30


