# Application Settings
APP_NAME=Media Mind AI
ENVIRONMENT=development
DEBUG=true
API_VERSION=v1

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Database (for future use)
DATABASE_URL=

# AI/ML Services
OPENAI_API_KEY=
EMBEDDING_MODEL=text-embedding-ada-002

# Transcription Service
WHISPER_MODEL=base
USE_OPENAI_WHISPER_API=false
TRANSCRIPTION_LANGUAGE=
TRANSCRIPTION_TASK=transcribe

# Document Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
CHUNKING_STRATEGY=fixed

# Vector Search
FAISS_INDEX_PATH=faiss_index
SEARCH_TOP_K=5
EMBEDDING_BATCH_SIZE=100

# LLM / Q&A
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.7
RAG_CONTEXT_CHUNKS=5
RAG_MAX_CONTEXT_LENGTH=4000

# File Storage Configuration
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=["pdf","txt","docx","pptx","xlsx","jpg","jpeg","png","gif","mp4","mp3","wav"]

# Security
# SECRET_KEY must be set in your .env file (generate a secure random key)
SECRET_KEY=
ACCESS_TOKEN_EXPIRE_MINUTES=30
